<mujoco model="satellite_3d">
  <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>
  <option integrator="RK4" timestep="0.005" gravity="0 0 0"/>
  
  <visual>
    <global offwidth="2560" offheight="1440"/>
  </visual>

  <default>
    <joint armature="0" damping="0" limited="false"/>
    <geom conaffinity="0" condim="3" density="500" friction="1 0.5 0.5" margin="0" material="geom"/>
    <site type="sphere" size="0.015" rgba="0.5 0.5 0.5 0.3"/>
  </default>

  <asset>
    <!-- Starfield-ish background (Dark) -->
    <texture type="skybox" builtin="flat" rgb1="0.02 0.02 0.04" rgb2="0.05 0.05 0.08" width="512" height="512"/>
    
    <material name="geom" rgba="0.5 0.5 0.5 1"/>
  </asset>

  <worldbody>
    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular="0.1 0.1 0.1"/>
    
    <!-- Camera -->
    <camera name="overhead_cam" pos="0 0 4" mode="fixed" xyaxes="1 0 0 0 1 0"/>

    <body name="satellite" pos="0 0 0">
      <joint name="root" type="free"/>
      
      <!-- 
        Cubic Body: 30x30x30 cm
        Mujoco box size is half-extent: 0.15 0.15 0.15
      -->
      
      <!-- Core Grey Body (slightly smaller to show colored plates) -->
      <geom name="core" type="box" size="0.145 0.145 0.145" rgba="0.2 0.2 0.2 1" mass="12"/>

      <!-- Colored Plates for Faces -->
      <!-- +X (Red) -->
      <geom name="face_px" type="box" pos="0.15 0 0" size="0.005 0.15 0.15" rgba="1 0 0 1"/>
      <!-- -X (Dark Red) -->
      <geom name="face_nx" type="box" pos="-0.15 0 0" size="0.005 0.15 0.15" rgba="0.5 0 0 1"/>
      
      <!-- +Y (Blue) -->
      <geom name="face_py" type="box" pos="0 0.15 0" size="0.15 0.005 0.15" rgba="0 0 1 1"/>
      <!-- -Y (Dark Blue) -->
      <geom name="face_ny" type="box" pos="0 -0.15 0" size="0.15 0.005 0.15" rgba="0 0 0.5 1"/>
      
      <!-- +Z (Green) -->
      <geom name="face_pz" type="box" pos="0 0 0.15" size="0.15 0.15 0.005" rgba="0 1 0 1"/>
      <!-- -Z (Dark Green) -->
      <geom name="face_nz" type="box" pos="0 0 -0.15" size="0.15 0.15 0.005" rgba="0 0.5 0 1"/>

      <!-- 
        Thrusters: 1 centered per face
        Order matches config/vehicle/cube_sat_6u.yaml
        1: +X Face
        2: -X Face
        3: +Y Face
        4: -Y Face
        5: +Z Face
        6: -Z Face
      -->
      <site name="thruster1" pos="0.15 0 0"   rgba="1 0 0 0.3"/> <!-- +X -->
      <site name="thruster2" pos="-0.15 0 0"  rgba="0.5 0 0 0.3"/> <!-- -X -->
      
      <site name="thruster3" pos="0 0.15 0"   rgba="0 0 1 0.3"/> <!-- +Y -->
      <site name="thruster4" pos="0 -0.15 0"  rgba="0 0 0.5 0.3"/> <!-- -Y -->
      
      <site name="thruster5" pos="0 0 0.15"   rgba="0 1 0 0.3"/> <!-- +Z -->
      <site name="thruster6" pos="0 0 -0.15"  rgba="0 0.5 0 0.3"/> <!-- -Z -->
      
    </body>
  </worldbody>
</mujoco>
