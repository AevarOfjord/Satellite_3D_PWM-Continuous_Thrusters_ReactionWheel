<mujoco model="satellite_3d">
  <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>
  <option integrator="RK4" timestep="0.005" gravity="0 0 0"/>
  
  <visual>
    <global offwidth="2560" offheight="1440"/>
  </visual>

  <default>
    <joint armature="0" damping="0" limited="false"/>
    <geom conaffinity="0" condim="3" density="500" friction="1 0.5 0.5" margin="0" material="geom" rgba="0.8 0.6 0.4 1"/>
    <site type="sphere" size="0.015" rgba="0.5 0.5 0.5 0.3"/>
  </default>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1=".1 .1 .2" rgb2="0 0 0" width="32" height="32"/>
    <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3" rgb2=".2 .3 .4" width="512" height="512" mark="edge" markrgb=".8 .8 .8"/>
    <material name="grid" texture="grid" texrepeat="20 20" texuniform="true" reflectance=".2"/>
    <material name="geom" rgba="0.8 0.6 0.4 1"/>
  </asset>

  <worldbody>
    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular="0.1 0.1 0.1"/>
    
    <!-- Floor for reference -->
    <geom name="floor" size="10 10 .05" type="plane" material="grid" pos="0 0 -3.0"/>

    <!-- Overhead Camera -->
    <camera name="overhead_cam" pos="0 0 4" mode="fixed" xyaxes="1 0 0 0 1 0"/>

    <body name="satellite" pos="0 0 0">
      <!-- 6-DOF Free Joint -->
      <joint name="root" type="free"/>
      
      <!-- Satellite Body (Box 0.29m side -> half-size 0.145) -->
      <geom name="satellite_geom" type="box" size="0.145 0.145 0.145" mass="10"/>

      <!-- Thruster Sites for Visualization (Glow) -->
      <!-- Standard Planar Thrusters (1-8) at Z=0 -->
      <site name="thruster1" pos="0.145 0.06 0"   rgba="1 0 0 0.3"/>
      <site name="thruster2" pos="0.145 -0.06 0"  rgba="1 0.2 0 0.3"/>
      <site name="thruster3" pos="0.06 -0.145 0"  rgba="0 1 0 0.3"/>
      <site name="thruster4" pos="-0.06 -0.145 0" rgba="0.2 1 0 0.3"/>
      <site name="thruster5" pos="-0.145 -0.06 0" rgba="0 0 1 0.3"/>
      <site name="thruster6" pos="-0.145 0.06 0"  rgba="0 0.2 1 0.3"/>
      <site name="thruster7" pos="-0.06 0.145 0"  rgba="1 1 0 0.3"/>
      <site name="thruster8" pos="0.06 0.145 0"   rgba="1 0.8 0 0.3"/>

      <!-- New Z-Axis Thrusters (9-12) -->
      <!-- Top Face (+Z) -->
      <site name="thruster9"  pos="0.145 0 0.145"  rgba="0 1 1 0.3"/>
      <site name="thruster10" pos="-0.145 0 0.145" rgba="0 1 1 0.3"/>

      <!-- Bottom Face (-Z) -->
      <site name="thruster11" pos="0 0.145 -0.145" rgba="1 0 1 0.3"/>
      <site name="thruster12" pos="0 -0.145 -0.145" rgba="1 0 1 0.3"/>
    </body>
  </worldbody>
</mujoco>
